{
  "width": 960,
  "height": 500,
  "data": [{
    "name": "contributions",
    "url": "contribLondon.json",
    "format": {
      "type": "json",
      "property": "relativeScore"
    }
  }, {
    "name": "countries",
    "url": "world-110m.json",
    "format": {
      "type": "topojson",
      "feature": "countries"
    },
    "transform": [{
      "type": "geopath",
      "value": "data",
      "projection": "mercator"
    }, {
      "type": "zip",
      "key": "data.id",
      "with": "contributions",
      "withKey": "data.countryCode",
      "as": "value",
      "default": null
    }, {
      "type": "filter",
      "test": "d.path!=null && d.value!=null"
    }]
  }],
  "scales": [{
    "name": "color",
    "type": "linear",
    "domain": [-1, 1],
    "range": ["brown", "steelblue"]
  }],
  "marks": [{
    "type": "path",
    "from": {
      "data": "countries"
    },
    "properties": {
      "enter": {
        "path": {
          "field": "path"
        }
      },
      "update": {
        "fill": {
          "scale": "color",
          "field": "value.data.score"
        }
      },
      "hover": {
        "fill": {
          "value": "red"
        }
      }
    }
  }]
}
